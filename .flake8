[flake8]
max-line-length = 100
extend-ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    F401,  # imported but unused (handled by isort)
    E402,  # module level import not at top of file
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    frontend/node_modules

# Complexity
max-complexity = 10

# Docstring checks
docstring-convention = google

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    test_*.py:S101,D103
    tests/*.py:S101,D103
    conftest.py:F401